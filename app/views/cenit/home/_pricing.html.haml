%section#pricing.gray
  #first-option
    .container
      .header
        .col-md-12
          %h3
            ='MONTHLY PRICING PLANS'
          %p
            = '30 days period trial without credit card required. Questions?'
            = link_to 'Contact us', '#',class: 'contact-modal'
      .row.charts
        .col-md-4
          .chart.first
            .plan-name
              ='Bronze'
            .specs
              .spec
                %span.variable
                  = '15 USD'
                = 'basic plan'
              .spec
                %span.variable
                  ='Community'
                ='slack channel'
              .spec
                %span.variable
                  ='No'
                ='specific support'
            =link_to '#', class:'button go-sign-in' do
              %span='Start now'
        .col-md-4
          .chart.featured
            .plan-name
              ='Silver'
            .specs
              .spec
                %span.variable
                  = '49 USD'
                = 'start-up plan'
              .spec
                %span.variable
                  = '5 hours'
                = 'assisted setup'
              .spec
                %span.variable
                  ='Private'
                ='slack channel'
              .spec
                %span.variable
                  ='48 hrs'
                ='support window'
            =link_to '#', class:'button go-sign-in' do
              %span='Start now'
        .col-md-4
          .chart.featured
            .plan-name
              = 'Golden'
            .specs
              .spec
                %span.variable
                  = '99 USD'
                = 'growth up plan'
              .spec
                %span.variable
                  = 'Unlimited'
                = 'assisted setup'
              .spec
                %span.variable
                  ='Private'
                ='slack channel'
              .spec
                %span.variable
                  ='ASAP'
                ='priority support'
            =link_to '#', class:'button go-sign-in' do
              %span='Start now'
        .col-md-4
          .chart.last
            .plan-name
              = 'Custom'
            .specs
              .spec
                %span.variable
                  = 'On-premise'
                = 'white label Cenit server'
              .spec
                %span.variable
                  = 'Custom'
                = 'development services'
              .spec
                %span.variable
                  ='Private'
                ='slack channel'
              .spec
                %span.variable
                  = 'Dedicated'
                = 'Support'
            =link_to '#', class:'button contact-modal' do
              %span='Request a quote'
